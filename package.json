{
  "name": "@glocksoftware/bimi-parse",
  "version": "1.0.1",
  "description": "Parse BIMI policy strings",
  "main": "index.js",
  "scripts": {
    "test": "xo && ava",
    "report": "nyc ava && nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glocksoftware/bimi-parse.git"
  },
  "keywords": [
    "bimi",
    "email"
  ],
  "author": "Valery Vladyka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glocksoftware/bimi-parse/issues"
  },
  "homepage": "https://github.com/glocksoftware/bimi-parse#readme",
  "devDependencies": {
    "ava": "^0.17.0",
    "coveralls": "^2.11.15",
    "nyc": "^10.0.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "prefer-const": 0,
      "no-negated-condition": 0,
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "no-debugger": [
        "warn"
      ],
      "no-useless-call": 0
    }
  },
  "dependencies": {
    "validator": "^12.0.0"
  }
}
